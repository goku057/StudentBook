<!-- included headers of html-->
<%- include("../partials-user/header.ejs") %>

    <body class="blogs_body">
        <!-- included main navigation bar-->
        <%- include("../partials-user/navbarMain.ejs") %>


            <div class="Blogs_div1">

                <h3 class="ui center aligned header">Posts</h3>
                <hr class="new1">
                <div class="ui relaxed divided list">
                    <%  for(let i = 0; i < data.posts.length; i++){ %> 
                        <div class="item">
                            <i class="large github middle aligned icon"></i>
                            <div class="content">
                                <a href="/blog-post?bid=<%= data.posts[i].b_id %>&uid=<%= data.posts[i].user_id %>" class="header"><%= data.posts[i].title %> </a></br>
                                <p><%= data.posts[i].body %></p>
                                <div class="description">Work Link: <%= data.posts[i].link %> </div>
                                <div class="description">Posted: <%= data.posts[i].post_time %> </div>
                                <br><a href="/works-edit?pid=<%= data.posts[i].p_id %>"><button style="background-color: #677515;
                                    color: white;
                                    padding: 12px 20px;
                                    border: none;
                                    cursor: pointer;">EDIT</button></a>
                                    <a onclick="return confirm('Are you sure?')" href="/works-delete?pid=<%= data.posts[i].p_id %>"><button style="background-color: #e41c37;
                                    color: white;
                                    padding: 12px 20px;
                                    border: none;
                                    cursor: pointer;">DELETE</button></a>
                            </div>
                            <br>
                        </div>
                        
                        <% } %> 
                </div>
            </div>
